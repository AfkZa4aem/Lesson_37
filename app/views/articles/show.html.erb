<h1><%= @article.title %></h1>

<p><%= @article.text %></p>

<%= link_to 'Back', articles_url %> | 
<%= link_to 'Edit', edit_article_url %>

<h2>Add comment:</h2>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :author %><br/ >
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br/ >
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
</p>
